# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_PORT=5000
SECRET_KEY=dev-secret-key-change-in-production

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/kirana_db
MONGODB_DB_NAME=kirana_db

# CORS Configuration (comma-separated origins)
# Includes React default port (3000), alternate (3001), and Expo (8081)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8081,http://127.0.0.1:3000

# Blockchain Configuration
# These need to be set with actual values when blockchain is deployed
POLYGON_AMOY_RPC_URL=https://rpc-amoy.polygon.technology
CONTRACT_ADDRESS=
PRIVATE_KEY=
ADMIN_ADDRESS=
CHAIN_ID=80002
GAS_LIMIT=3000000

# ML Service Configuration (Mohit's service)
ML_SERVICE_URL=http://localhost:5000/api/ml

# Twilio WhatsApp Configuration
# Get these from: https://console.twilio.com/ (Account SID and Auth Token)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
# Twilio WhatsApp Sandbox number (default for testing)
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Dialogflow Configuration
# Get Project ID from: https://console.cloud.google.com/apis/credentials
# Download service account JSON key from Google Cloud Console
DIALOGFLOW_PROJECT_ID=your-dialogflow-project-id
DIALOGFLOW_CREDENTIALS_PATH=path/to/your/service-account-key.json

# Vineet API Configuration
# Base URL for Vineet's API endpoints
VINEET_API_BASE_URL=http://localhost:5000/api

# WhatsApp Internal API Key
# Generate a secure random string for protecting internal endpoints
# Use: openssl rand -hex 32 (or any secure random generator)
WHATSAPP_INTERNAL_API_KEY=your_secure_random_api_key_here

# WhatsApp Bot Configuration (Free WhatsApp using whatsapp-web.js)
# Flask API URL for WhatsApp bot to connect to
FLASK_API_URL=http://localhost:5000
# Reminder schedule (cron expression, default: daily at 9 AM)
REMINDER_SCHEDULE=0 9 * * *
# WhatsApp session storage path (relative to whatsapp-bot directory)
WHATSAPP_SESSION_PATH=./.wwebjs_auth

# To use this file, copy it to .env:
# PowerShell: Copy-Item env.template -Destination .env
# Linux/Mac: cp env.template .env
# Then edit .env and replace all placeholder values with your actual credentials

